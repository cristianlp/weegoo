<li class="event_created_activity">
  
  <% if current_user == activity.user_a and current_user == user %>
    <%= raw t('views.activities.you_created_the_event', :event => link_to(activity.event.name, [activity.event.venue, activity.event])) %>
  <% else %>
    <%= raw t('views.activities.user_a_created_the_event', :user_a => link_to(activity.user_a.full_name, activity.user_a), :event => link_to(activity.event.name, [activity.event.venue, activity.event])) %>
  <% end %>
  
  <div class="activity_information">
    <%=l activity.created_at, :format => :activity %>
  </div>
  
</li>