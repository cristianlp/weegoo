<div class="box">
    <div class="header">
      Friends (<%= user.accepted_friendships.size %>)
      <span class="show_all">
        <%= link_to "Show all", friends_path(user) %>
      </span>
    </div>
    <div class="content">
      <% if user.accepted_friendships.empty? %>
        You might want to <%= link_to "search people", users_path %> and request their friendship.
      <% else %>
        <ul id="friends">
          <% user.lasts_friendships.each do |friendship| %>
            <li>
              <%= render :partial => "user_desc", :locals => { :user => friendship.friend(user) } %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>