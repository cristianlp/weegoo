<% title "Search people" %>

<h1>Search people</h1>

<div id="search">
  <%= form_tag users_path, :method => "get" do %>
    <div>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil, :class => "g-button" %>
    </div>
  <% end %>
</div>

<% if not @users.empty? %>

  <h2>Results for: "<%= params[:search] %>"</h2>
  
  <ul id="users_list">
    
    <%= render :partial => "user_desc", :collection => @users, :as => :user %>
        
  </ul>
  
  <%= paginate @users %>
  
<% elsif params[:search] %>
  
  <h2>No results found for: "<%= params[:search] %>"</h2>
  
<% end %>