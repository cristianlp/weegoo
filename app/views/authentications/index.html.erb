<% title "#{current_user.full_name}'s connections" %>

<%= render :partial => "users/user_information", :locals => { :user => current_user } %>

<h1><%=t 'views.authentications.authentications' %></h1>

<% if @authentications.size > 0 %>
  
  <ul id="authentications_list">
    
    <%= render @authentications %>
    
  </ul>
  
<% else %>
  
  <div>
  <%=t 'views.authentications.no_authentications' %>
  </div>
  
<% end %>

<%= link_to raw(t('views.scaffold.back')), current_user %>