<div id="search">
  
  <%= form_tag points_of_interest_path, :method => "get" do %>
    <div>
      <%= label_tag "Search" %>:
      <%= select_tag :type, options_for_select({"Everything" => "Everything", "Venues" => "Venue", "Events" => "Event"}, params[:type] ? params[:type] : "Everything") %>
      
      <%= label_tag "show as" %>:
      <%= select_tag :show_as, options_for_select({"List" => "List", "Map" => "Map"}, params[:show_as] ? params[:show_as] : "List") %>
    </div>
    <div>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil, :class => "g-button" %>
    </div>
  <% end %>
  
</div>