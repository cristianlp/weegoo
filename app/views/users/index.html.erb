<h1>Search people</h1>

<div id="search">
  <%= form_tag users_path, :method => "get" do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<% if not @users.empty? %>
  
  <ul id="search_results">
    
    <% @users.each do |user| %>
      <li class="user">
        <div class="full_name"><%= link_to user.full_name, :controller => "users", :action => "show", :id => user.id %></div>
        <div class="meta">FIXXXXXX</div>
      </li>
    <% end %>
    
  </ul>
<% elsif params[:search] %>
  <div id="empty_search_results">
    No results found
  </div>
<% end %>