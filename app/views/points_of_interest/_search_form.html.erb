<div id="search">
  
  <%= form_tag points_of_interest_index_path, :method => "get" do %>
    <div>
      <%= label_tag t('views.search.search') %>:
      <%= select_tag :type, options_for_select({t('views.search.everything') => "Everything", t('views.search.venues') => "Venue", t('views.search.events') => "Event"}, params[:type] ? params[:type] : "Everything") %>
      
      <%= label_tag t('views.search.show_as') %>:
      <%= select_tag :show_as, options_for_select({t('views.search.list') => "List", t('views.search.map') => "Map"}, params[:show_as] ? params[:show_as] : "List") %>
    </div>
    <div>
      <%= text_field_tag :search, params[:search] %>
      <%= big_button_submit_tag t('views.search.search'), :name => nil %>
    </div>
  <% end %>
  
</div>