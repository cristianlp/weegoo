<div id="left_column">
  
  <%= render :partial => "user_information", :locals => { :user => @user } %>
  
  <h1>Friends</h1>
  
  <ul id="users">
    <% @user.accepted_friendships.each do |friendship| %>
      <li class="user">
        <%= render :partial => "user_desc_full", :locals => { :user => friendship.friend(@user) } %>
      </li>
    <% end %>
  </ul>
  
</div>

<div id="right_column">
  
  <% if @user == current_user %>
    <%= render :partial => "pending_friendships", :locals => { :user => @user } %>
  <% end %>
  
  <%= render :partial => "friends", :locals => { :user => @user } %>
  
</div>