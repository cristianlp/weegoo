<li class="image_created_activity">
  
  <% if current_user == activity.user_a and current_user == user %>
    
    <% if not activity.venue.nil? %>
      <%= raw t('views.activities.you_created_the_image_at_the_venue', :image => link_to(activity.image.caption, [activity.venue, activity.image]), :venue => link_to(activity.venue.name, activity.venue)) %>
    <% elsif not activity.event.nil? %>
      <%= raw t('views.activities.you_created_the_image_at_the_event', :image => link_to(activity.image.caption, [activity.event.venue, activity.event, activity.image]), :event => link_to(activity.event.name, [activity.event.venue, activity.event])) %>
    <% end %>
    
  <% else %>
    
    <% if not activity.venue.nil? %>
      <%= raw t('views.activities.user_a_created_the_image_at_the_venue', :user_a => link_to(activity.user_a.full_name, activity.user_a), :image => link_to(activity.image.caption, [activity.venue, activity.image]), :venue => link_to(activity.venue.name, activity.venue)) %>
    <% elsif not activity.event.nil? %>
      <%= raw t('views.activities.user_a_created_the_image_at_the_event', :user_a => link_to(activity.user_a.full_name, activity.user_a), :image => link_to(activity.image.caption, [activity.event.venue, activity.event, activity.image]), :event => link_to(activity.event.name, [activity.event.venue, activity.event])) %>
    <% end %>
    
  <% end %>
  
  <div class="activity_information">
    <%=l activity.created_at, :format => :activity %>
  </div>
  
</li>