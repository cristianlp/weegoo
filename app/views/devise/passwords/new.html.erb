<h2><%=t 'views.users.forgot_your_password' %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="inputs">
    <%= f.input :email %>
  </div>

  <div class="actions">
    <%= f.submit t('views.users.send_me_reset_password_instructions'), :class => 'button big' %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>