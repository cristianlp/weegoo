<% if user_signed_in? %>
  
  <div class="actions">
    
    <% if not current_user.been_at(point_of_interest) %>
      <%= link_to t("views.points_of_interest.been_here"), been_points_of_interest_path(point_of_interest), :class => "button icon pin" %>
      
      <% if not current_user.want_to_go_to(point_of_interest) %>
        
        <%= link_to t("views.points_of_interest.want_to_go"), want_to_go_points_of_interest_path(point_of_interest), :class => "button icon like" %>
        
      <% else %>
        
        <%= link_to t("views.points_of_interest.dont_want_to_go"), dont_want_to_go_points_of_interest_path(point_of_interest), :class => "button icon like danger" %>
        
      <% end %>
      
    <% else %>
      
      <%= link_to t("views.points_of_interest.not_been_here"), not_been_points_of_interest_path(point_of_interest), :class => "button icon pin danger" %>
      
    <% end %>
    
  </div>
  
<% end %>