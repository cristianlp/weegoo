<% title t('views.users.search_for_friends_on_other_social_network_already_using_weegoo', :other_social_network => params[:provider]) %>

<!-- closing narrow -->
</div>

<div id="user_information">
  
  <div class="narrow">
  
    <h1 id="avatar">
      <%= link_to image_tag(gravatar_url(@user.email)), @user %>
      <%= @user.username %> <em>(<%= @user.full_name %>)</em>
    </h1>
    
  </div>

</div>

<!-- reopening narrow -->
<div class="narrow">
  
  <h1><%=t 'views.users.friends_using_other_social_network_and_weegoo', :other_social_network => params[:provider] %></h1>
  
  <% if @friends.size > 0 %>
    
    <ul class="list">
      <%= render :partial => 'users/user', :collection => @friends %>
    </ul>
    
    <%= paginate @friends, :remote => true %>
    <%= render 'shared/loading' %>
    
  <% else %>
    
    <div class="empty">
      <%=t 'views.users.you_do_not_have_friends_using_other_social_network_and_weegoo', :other_social_network => params[:provider] %>
    </div>
    
  <% end %>
      
  <div class="back">
    <%= link_to raw(t 'views.scaffold.back'), @user %>
  </div>
