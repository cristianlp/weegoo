<% title @title %>

<!-- closing narrow -->
</div>

<div class="information">
  
  <div class="narrow">
  
    <h1 id="avatar">
      <%= @event.name %>
    </h1>
    
  </div>
  
</div>

<!-- reopening narrow -->
<div class="narrow">
  
  <h1><%= @title %></h1>
  
  <% if not @users.empty? %>
    <ul class="list">
      <%= render :partial => 'users/user', :collection => @users %>
    </ul>
    
    <%= paginate @users, :remote => true %>
    <%= render 'shared/loading' %>
  <% else %>
    <div class="empty">
      <%= @no_users_message %>
    </div>
  <% end %>
  
  <div class="back">
    <%= link_to raw(t 'views.scaffold.back'), [@venue, @event] %>
  </div>