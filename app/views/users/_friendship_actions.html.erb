<% if friendship.friend(user).waiting_for_confirmation?(user) %>
  
  <div class="actions">
    
    <%= link_to t('views.users.accept'), accept_friendship_path(:id => user.id, :friendship_id => friendship.id), :class => "button icon approve" %>
    
    <%= link_to t('views.users.decline'), decline_friendship_path(:id => user.id, :friendship_id => friendship.id), :class => "button icon remove danger" %>
    
  </div>
  
<% else %>
  
  <div class="actions_response">
    <% if current_user.is_friend?(friendship.friend(user)) %>
      <%=t 'views.users.you_and' %> <%= friendship.friend(user).full_name %> <%=t 'views.users.are_now_friends' %>.
    <% else %>
      <%=t 'views.users.you_and' %> <%= friendship.friend(user).full_name %> <%=t 'views.users.are_not_friends' %>.
    <% end %>
  </div>
  
<% end %>