<div id="left_column">
  
  <h1>Friendship requests</h1>
  
  <ul id="users">
    <% @user.pending_friendships.each do |friendship| %>
      <li class="user">
        <%= render :partial => "user_desc_large", :locals => { :user => friendship.friend(@user) } %>
        
        <div class="actions">
          <%= link_to "Accept", accept_friendship_path(:id => @user.id, :friendship_id => friendship.id) %> | 
          <%= link_to "Decline", decline_friendship_path(:id => @user.id, :friendship_id => friendship.id) %>
        </div>
      </li>
    <% end %>
  </ul>
  
</div>

<div id="right_column">
  
  <%= render :partial => "user_information", :locals => { :user => @user } %>
  
</div>