<% title t('views.users.mutual_friends_with_user', :user => @user.full_name) %>

<!-- closing narrow -->
</div>

<div id="user_information">
  
  <div class="narrow">
  
    <h1 id="avatar">
      <%= link_to image_tag(gravatar_url(@user.email)), @user %>
      <%= @user.username %> <em>(<%= @user.full_name %>)</em>
    </h1>
    
  </div>
  
</div>

<!-- reopening narrow -->
<div class="narrow">
  
  <h1><%=t 'views.users.mutual_friends_with_user', :user => @user.full_name %></h1>
  
  <% if @mutual_friends.size > 0 %>
    
    <ul class="list">
      <% @mutual_friends.each do |user| %>
        <%= render :partial => 'users/user', :locals => { :user => user } %>
      <% end %>
    </ul>
    
    <%= paginate @mutual_friends, :remote => true %>
    <%= render 'shared/loading' %>
    
  <% else %>
    
    <div class="block-message alert-message warning">
      <%= raw(t 'views.users.you_have_no_mutual_friends_with_user', :user => link_to(@user.full_name, @user)) %>
    </div>
  
  <% end %>
  
  <div class="back">
    <%= link_to raw(t 'views.scaffold.back'), @user %>
  </div>
