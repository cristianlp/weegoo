<% title t('views.venues.browse_categories') %>

<div data-role="content">
  <ul data-role="listview">
    <%= render :partial => 'categories/category', :collection => @categories %>
    
    <li>
      <%= link_to t('views.venues.all_categories'), map_venues_path, 'data-ajax' => false %>
      <span class="ui-li-count"><%= @categories.inject(0) { |sum, c| sum + c.venues.size } %></span>
    </li>
  </ul>
</div>
