<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "weegoo" %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults, "weegoo_gmaps.js", "fancyzoom.min.js" %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    
    <%= render "shared/header" %>

    <div id="content">
      <div class="narrow">
        
        <div id="flash">
          <% flash.each do |name, message| %>
            <div class="<%= name %>"><%= message %></div>
          <% end %>
        </div>
        
        <%= yield %>
      </div>
    </div>
    
    <%= render "shared/footer" %>

  </body>
</html>
