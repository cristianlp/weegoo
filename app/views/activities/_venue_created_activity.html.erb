<li class="venue_created_activity">
  
  <%= image_tag 'map.png' %>
  
  <% if current_user == activity.user_a and current_user == user %>
    <%= raw t('views.activities.you_created_the_venue', :venue => link_to(activity.venue.name, activity.venue)) %>
  <% else %>
    <%= raw t('views.activities.user_a_created_the_venue', :user_a => link_to(activity.user_a.full_name, activity.user_a), :venue => link_to(activity.venue, activity.venue)) %>
  <% end %>
  
  <div class="activity_information">
    <%=l activity.created_at, :format => :activity %>
  </div>
  
</li>