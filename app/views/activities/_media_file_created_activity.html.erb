<li class="activity media_file_activity">
  
  <% if current_user == activity.user_a and current_user == user %>
    You've created a <%= link_to "media file", "#activity_#{activity.id}_media_file_#{activity.media_file_id}", :class => "zoomable" %> on the <%= activity.point_of_interest.type.downcase %> <%= link_to activity.point_of_interest.name, activity.point_of_interest %>.
  <% else %>
    <%= link_to activity.user_a.full_name, activity.user_a %> created a <%= link_to "media file", "#media_file_#{activity.media_file.id}", :class => "zoomable" %> on the <%= activity.point_of_interest.type.downcase %> <%= link_to activity.point_of_interest.name, activity.point_of_interest %>.
  <% end %>
  
  <div class="information">
    <%= activity.created_at.strftime("%d %B at %H:%M") %>
  </div>
  
  <%= render :partial => "activities/hidden_media_file", :locals => { :activity => activity } %>
  
</li>