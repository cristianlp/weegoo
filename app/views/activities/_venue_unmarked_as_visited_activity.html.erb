<li class="venue_unmarked_as_visited_activity">
  
  <%= image_tag 'map--minus.png' %>
  
  <% if current_user == activity.user_a and current_user == user %>
    <%= raw t('views.activities.you_unmarked_the_venue_as_visited', { :venue => link_to(activity.venue.name, activity.venue) }) %>
  <% else %>
    <%= raw t('views.activities.user_a_unmarked_the_venue_as_visited', { :user_a => link_to(activity.user_a.full_name, activity.user_a), :venue => link_to(activity.venue.name, activity.venue) }) %>
  <% end %>
  
  <div class="activity_information">
    <%=l activity.created_at, :format => :activity %>
  </div>
  
</li>