<% title t('views.users.users_friends', :user => @user.full_name) %>

<%= render :partial => "users/user_information", :locals => { :user => @user } %>

<h1><%= t('views.users.friends').capitalize %></h1>

<% if @accepted_friendships.size > 0 %>
  
  <ul id="users_list">
    <% @accepted_friendships.each do |friendship| %>
      <%= render :partial => "user_desc", :locals => { :user => friendship.friend(@user), :show_delete_link => true } %>
    <% end %>
  </ul>
  
  <%= paginate @accepted_friendships, :remote => true %>
  <%= render "shared/loading" %>
  
<% else %>
  
  <div class="empty">
    <% if @user == current_user %>
      <%=t 'views.users.you_have_no_friends' %>
    <% else %>
      <%= raw(t 'views.users.no_friends', :user => link_to(@user.full_name, @user)) %>
    <% end %>
  </div>
  
<% end %>

<div class="back">
  <%= link_to raw(t 'views.scaffold.back'), @user %>
</div>