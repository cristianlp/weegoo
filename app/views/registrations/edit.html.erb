<div id="edit_profile_form">
  
  <h1><%=t 'views.registrations.edit_account' %></h1>
  
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.personal_information' %></h2>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
    </div>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.location_information' %></h2>
      <%= f.input :location %>
    </div>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.account_information' %></h2>
      <%= f.input :username %>
      <% if resource.password_required? %>
        <%= f.input :password, :hint => t("views.registrations.hints.password") %>
        <%= f.input :password_confirmation %>
        <%= f.input :current_password, :hint => t("views.registrations.hints.current_password") %>
      <% end %>
    </div>
    
    <div class="inputs">
      <div class="avatar optional">
        <label>Avatar</label>
        <%= image_tag(gravatar_url(resource.email, 64)) %>
        <span class="hint"><%= raw(t 'views.registrations.change_your_avatar_at_gravatar', :gravatar => link_to('gravatar.com', 'http://gravatar.com')) %></span>
      </div>
    </div>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.privacy_settings' %></h2>
      <%= f.input :share_email %>
      <%= f.input :share_location %>
      <%= f.input :share_activity %>
      <%= f.input :post_activity %>
      <%= f.input :tweet_activity %>
    </div>
    
    <div class="actions">
      <%= submit_tag t('helpers.submit.user.update'), :class => 'button big' %>
    </div>
  <% end %>
  
  <h2><%=t 'views.registrations.cancel_account' %></h2>
  
  <p><%=t 'views.registrations.unhappy' %> <%= link_to t('views.registrations.cancel_account'), registration_path(resource_name), :confirm => t('views.scaffold.are_you_sure'), :method => :delete %>.</p>
  
  <%= link_to raw(t('views.scaffold.back')), :back %>

</div>
