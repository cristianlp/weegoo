<div data-role="content">
  <%= simple_form_for @venue, :html => { 'data-ajax' => false } do |f| %>
    <%= f.error_notification %>
    
    <div class="inputs">
      <div data-role="fieldcontain">
        <%= f.input :name %>
      </div>
      <div data-role="fieldcontain">
        <%= f.input :description %>
      </div>
      <div data-role="fieldcontain">
        <%= f.association :category %>
      </div>
      <div data-role="fieldcontain">
        <%= f.association :sub_category %>
      </div>
      <div data-role="fieldcontain">
        <%= f.input :latitude, :as => :hidden %>
      </div>
      <div data-role="fieldcontain">
        <%= f.input :longitude, :as => :hidden %>
      </div>
    </div>
    
    <div data-role="fieldcontain">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

<script>
$(window).load(function()
{
  set_latitude_and_longitude("#venue_latitude", "#venue_longitude", "<%= current_user.location %>");
});
</script>