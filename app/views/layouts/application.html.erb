<!DOCTYPE html>
<html>
  <head>
    <title>Weegoo</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    
    <div id="header">
      <div class="narrow">
        
        <div id="user_menu">
          <% if user_signed_in? %>
            Signed in as <%= current_user.full_name %>. Not you? <%= link_to "Sign out", destroy_user_session_path %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %>
          <% end %>
        </div>
        
        <h1><%= link_to image_tag("logo.png"), root_path %></h1>
        <ul id="main_menu">
          <li><%= link_to "Venues", venues_path %></li>
          <li><%= link_to "Events", events_path %></li>
        </ul>
      </div>
    </div>

    <div id="content">
      <div class="narrow">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
