<li class="been_at activity">
  
  <% if current_user == activity.user_a and current_user == user %>
    <%= raw t('views.activities.youve_been_at', { :point_of_interest => link_to(activity.point_of_interest.name, activity.point_of_interest) }) %>
  <% else %>
    <%= raw t('views.activities.been_at', { :subject => link_to(activity.user_a.full_name, activity.user_a), :point_of_interest => link_to(activity.point_of_interest.name, activity.point_of_interest) }) %>
  <% end %>
  
  <div class="information">
    <%=l activity.created_at, :format => :activity %>
  </div>
  
</li>