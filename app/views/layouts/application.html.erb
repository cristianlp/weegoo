<!DOCTYPE html>
<html>
  <head>
    <title>weegoo - <%= content_for?(:title) ? yield(:title) : "Got a good reason for taking the easy way out" %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    
    <div id="header">
      <div class="narrow">
        
        <div id="user_menu">
          <% if user_signed_in? %>
            Signed in as <%= current_user.full_name %>. Not you? <%= link_to "Sign out", destroy_user_session_path %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %>
          <% end %>
        </div>
        
        <h1><%= link_to image_tag("logo.png"), root_path %></h1>
        <ul id="main_menu">
          <li><%= link_to "Venues and events", points_of_interest_path %></li>
          <li><%= link_to "People", users_path %></li>
        </ul>
      </div>
    </div>

    <div id="content">
      <div class="narrow">
        
        <div id="flash">
          <% flash.each do |name, message| %>
            <div class="<%= name %>"><%= message %></div>
          <% end %>
        </div>
        
        <%= yield %>
      </div>
    </div>

  </body>
</html>
