<% title t('views.users.users_places_to_go', :user => @user.full_name) %>

<%= render :partial => "users/user_information", :locals => { :user => @user } %>

<h1><%= t('views.users.places_to_go').capitalize %></h1>

<%= render :partial => "users/filter_form", :locals => { :url => places_to_go_path(@user) } %>

<% if @want_to_go_points_of_interest.size > 0 %>
  <%= render :partial => "points_of_interest/points_of_interest_#{params[:show_as] ? params[:show_as].underscore : "list" }", :locals => { :points_of_interest => @want_to_go_points_of_interest } %>
<% else %>
  <div class="empty">
    <% if @user == current_user %>
      <%=t 'views.users.you_have_no_want_to_go_places' %>
    <% else %>
      <%=raw (t 'views.users.no_want_to_go_places', :user => link_to(@user.full_name, @user)) %>
    <% end %>
  </div>
<% end %>

<div class="back">
  <%= link_to raw(t('views.scaffold.back')), @user %>
</div>