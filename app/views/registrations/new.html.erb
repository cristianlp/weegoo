<div id="sign_up_form">
  
  <h1><%=t 'views.registrations.sign_up' %></h1>
    
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.personal_information' %></h2>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
    </div>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.location_information' %></h2>
      <%= f.input :location %>
    </div>
    
    <div class="inputs">
      <h2><%=t 'views.registrations.account_information' %></h2>
      <%= f.input :username %>
      <% if @user.password_required? %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      <% end %>
    </div>
    
    <div class="actions">
      <%= f.button :submit, t('views.registrations.sign_up') %>
    </div>
  <% end %>
  
  <%= render :partial => 'devise/shared/links' %>
  
</div>
