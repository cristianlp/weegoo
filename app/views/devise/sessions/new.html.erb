<div id="sign_in_form" class="columns">

<div class="left">
  <h1><%=t 'views.sessions.sign_in' %></h1>
  
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    
    <div class="inputs">
      <%= f.input :username %>
      <%= f.input :password %>
      <% if devise_mapping.rememberable? -%>
        <%= f.input :remember_me, :as => :boolean %>
      <% end -%>
    </div>
    
    <div class="actions">
      <%= big_button_submit_tag t("views.sessions.sign_in") %>
    </div>
  <% end %>
  
</div>

<div class="right">
  <h1><%=t 'views.sessions.third_party_sign_in' %></h1>
  
  <div id="authentication_applications">
    <%= link_to image_tag("facebook_64.png"), "/auth/facebook" %>
    <%= link_to image_tag("twitter_64.png"), "/auth/twitter" %>
  </div>
</div>

</div>

<%= render :partial => "devise/shared/links" %>