<% title t('views.users.other_applications_friends') %>

<%= render :partial => "users/user_information", :locals => { :user => @user } %>

<h1><%= t('views.users.other_applications_friends').capitalize %></h1>

<ul id="users_list">
  <% @friends.each do |user| %>
    <%= render :partial => "user_desc", :locals => { :user => user } %>
  <% end %>
</ul>

<% if @friends.size > 0 %>
  <%= paginate @friends, :remote => true %>
  <%= render "shared/loading" %>
<% end %>

<%= link_to raw(t('views.scaffold.back')), @user %>