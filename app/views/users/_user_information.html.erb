<div id="user_information">
  
  <div id="avatar">
    <%= link_to image_tag(gravatar_url(user.email)), user %>
  </div>
  
  <div id="information">
    <h1><%= link_to user.full_name, user %></h1>
    <h2><%= user.location %></h2>
  
    <ul id="stats">
      <li><%= link_to raw("<span>#{user.accepted_friendships.size}</span> friends"), friends_path(user) %></li>
      
      <li><span>300</span> Visited places</li>
      
      <li style="border-right:none"><span>1000</span> Places to go</li>
    </ul>
  </div>
  
</div>